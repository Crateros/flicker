<form action="/auth/login" method="POST" id="loginForm">
  <div class="form-group">
    <label for="authEmail">Email</label>
    <input id="authEmail" class="form-control" type="email" name="email">
  </div>

  <div class="form-group">
    <label for="authPassword">Password</label>
    <input id="authPassword" class="form-control" type="password" name="password">
  </div>

  <input class="btn btn-primary" type="submit" id="login">
</form>

<a href="/auth/facebook" class="btn btn-primary" id="facebookLogin" >
  Login via Facebook
</a>
